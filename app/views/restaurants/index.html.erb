<div class="container col-6 text-center mt-3">
  <h1 class="mb-3">Restaurants</h1>
  <ul class='list-group'><% @restaurants.each do |resto| %>
    <li class='list-group-item'>
      <%= link_to resto.name, restaurant_path(resto) %>
    </li>
    <% end %>
  </ul>
  <%= link_to 'Add a new restaurant', new_restaurant_path, class:'btn btn-primary mt-3 mb-5' %>
</div>
