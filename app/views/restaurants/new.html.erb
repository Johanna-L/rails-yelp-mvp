<div class="container col-6 text-center mt-3">
  <h1 class="mb-5">Add a new restaurant!</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit class:'btn btn-primary mt-2 mb-5'%>
  <% end %>
  <%= link_to 'Back to list', restaurants_path %>
</div>
